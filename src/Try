import React from 'react'
import { ProjectDetails } from '../../Data'
const ProjectCard = ({ className }) => {
    return (
        <div className='ProjectCard  flex items-center justify-center gap-10 p-10'>


            {
                ProjectDetails.map((details, index) => {
                    return (
                        <div key={index} className={`border text-white px-5 py-3${className}`} >

                            <img className='h-60 w-full rounded-2xl border' src={details.imgSrc} alt={details.imgAlt} />

                            <div className='border w-full px-5 py-2'>

                                <h2 className='text-xl font-bold capitalize tracking-wider'>{details.title}</h2>

                                <p className='text-base h-20 border border-red w-full'>{details.desc}</p>

                                <div className="flex flex-row gap-4 mt-2">
                                    {Object.values(details.skills).map((skill, index) => (
                                        <button
                                            key={index}
                                            className=" px-2 text-sm font-bold rounded-md capitalize cursor-pointer bg-purple-700"
                                        >
                                            {skill}
                                        </button>
                                    ))}
                                </div>

                                <div className='flex flex-row gap-4 mt-2'>
                                    <button className=' px-2 text-sm font-bold rounded-md capitalize cursor-pointer bg-gray-300 text-black'>{details.source}</button>
                                    <button className=' px-2 text-sm font-bold rounded-md capitalize cursor-pointer bg-gray-300 text-black'>{details.link}</button>
                                </div>
                            </div>
                        </div >
                    )
                })
            }
        </div>

    )
}

export default ProjectCard